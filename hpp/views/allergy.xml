<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_allergy_form" model="ir.ui.view">
        <field name="name">hospital.allergy.form</field>
        <field name="model">hospital.allergy</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_allergy_list" model="ir.ui.view">
        <field name="name">hospital.allergy.list</field>
        <field name="model">hospital.allergy</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

</odoo>