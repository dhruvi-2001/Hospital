<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_disease_question_form" model="ir.ui.view">
        <field name="name">hospital.disease.question.form</field>
        <field name="model">hospital.disease.question</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="disease_id"/>
                    <field name="question"/>
                    <field name="answer"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_disease_question_list" model="ir.ui.view">
        <field name="name">hospital.disease.question.list</field>
        <field name="model">hospital.disease.question</field>
        <field name="arch" type="xml">
            <list>
                <field name="disease_id"/>
                <field name="question"/>
            </list>
        </field>
    </record>

</odoo>
